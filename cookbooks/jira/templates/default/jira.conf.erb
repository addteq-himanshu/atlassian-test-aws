# jira
 
description     "Atlassian Jira - Bug and issues tracking"
 
start on runlevel [2345]
stop on runlevel [!2345]
 
kill timeout 30
 
env RUN_AS_USER=<%= @user %>
env BASEDIR=<%= @install_dir %>/current
 
script
    LOGFILE=$BASEDIR/logs/catalina.out.`date +%Y-%m-%d`.log
    exec su - $RUN_AS_USER -c "$BASEDIR/bin/catalina.sh run" >> $LOGFILE 2>&1
end script
